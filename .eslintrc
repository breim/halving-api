{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "no-irregular-whitespace": "warn",
    "brace-style": ["error", "stroustrup"],
    "comma-dangle": ["error", "never"],
    "no-unused-vars": ["warn"],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-var": ["off"],
    "one-var": ["off"],
    "arrow-parens": ["off"],
    "class-methods-use-this": "off",
    "no-underscore-dangle": [2, { "allowAfterThis": true }]
  }
}